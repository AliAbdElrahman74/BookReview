<h1> Edit Book</h1>

<%= simple_form_for  @book, :html => {:multipart => true} do |f|  %>
  <%= f.input :title, label: "Book title" %>
  <%= f.input :description%>
  <%= f.input :author%>
  <h5>Category</h5>
  <%= f.select( :category_id, @categories,{}, {class: "form-control", id:"sel1" } )%>
  <%= f.button :submit %>

<% end %>
